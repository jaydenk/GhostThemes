<article class="post-card{{#if featured}} post-card-featured{{/if}}{{#foreach tags visibility="all"}} tag-{{slug}}{{/foreach}}">
    <div class="post-card-content">
        <header class="post-card-header">
            {{#if primary_tag}}
            {{#unless primary_tag.visibility}}
            <span class="post-card-tag">{{primary_tag.name}}</span>
            {{/unless}}
            {{/if}}
            <h2 class="post-card-title">
                <a href="{{#if canonical_url}}{{canonical_url}}{{else}}{{url}}{{/if}}"{{#if canonical_url}} target="_blank" rel="noopener noreferrer"{{/if}}>{{title}}</a>
            </h2>
        </header>

        <div class="post-card-body">
            {{content}}
        </div>

        <footer class="post-card-footer">
            <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMM D, YYYY"}}
            </time>
            {{#if reading_time}}
            <span class="post-card-reading-time">&middot; {{reading_time}}</span>
            {{/if}}
        </footer>
    </div>
</article>
