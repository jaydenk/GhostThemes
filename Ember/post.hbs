{{!< default}}

{{#post}}
<article class="gh-article">
    <header class="gh-article-header">
        <h1 class="gh-article-title">{{title}}</h1>

        <div class="gh-article-meta">
            <time class="gh-article-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMMM D, YYYY"}}
            </time>
            {{#if reading_time}}
            <span class="gh-article-reading-time">
                &middot; {{reading_time}}
            </span>
            {{/if}}
        </div>
    </header>

    {{#if feature_image}}
    <figure class="gh-article-image">
        <img
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1200w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(min-width: 1200px) 1140px, calc(100vw - 40px)"
            src="{{img_url feature_image size="l"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        >
        {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}

    <div class="gh-article-content">
        {{content}}
    </div>

    {{#if tags}}
    <footer class="gh-article-footer">
        <div class="gh-article-tags">
            {{#foreach tags}}
                <a href="{{url}}" class="gh-tag">{{name}}</a>
            {{/foreach}}
        </div>
    </footer>
    {{/if}}
</article>

{{#if comments}}
<section class="gh-comments">
    {{comments}}
</section>
{{/if}}
{{/post}}
