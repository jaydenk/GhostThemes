{{!< default}}

{{!--
    Custom template for About page.
    To use: Create a page in Ghost, then in the page settings
    sidebar (gear icon), set the "Template" dropdown to "Custom About".

    - The page title becomes your name / heading
    - The feature image becomes your photo
    - The custom excerpt becomes a subtitle / tagline
    - The page body content becomes your bio text
--}}

{{#post}}
<article class="gh-article gh-page gh-about-page">
    <div class="gh-about-header">
        {{#if feature_image}}
        <div class="gh-about-photo">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1200w"
                sizes="(max-width: 768px) 200px, 280px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            >
        </div>
        {{/if}}

        <div class="gh-about-intro">
            <h1 class="gh-about-name">{{title}}</h1>
            {{#if custom_excerpt}}
            <p class="gh-about-tagline">{{custom_excerpt}}</p>
            {{/if}}
        </div>
    </div>

    <div class="gh-about-divider"></div>

    <div class="gh-article-content gh-about-content">
        {{content}}
    </div>
</article>
{{/post}}
