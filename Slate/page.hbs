{{!< default}}

{{#post}}
<article class="gh-page">
    {{#match @page.show_title_and_feature_image}}
    <header class="gh-page-header">
        <h1 class="gh-page-title">{{title}}</h1>
    </header>

    {{#if feature_image}}
    <figure class="gh-page-image">
        <img
            srcset="{{img_url feature_image size="m"}} 800w,
                    {{img_url feature_image size="l"}} 1600w"
            sizes="(min-width: 1000px) 900px, 100vw"
            src="{{img_url feature_image size="l"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        >
    </figure>
    {{/if}}
    {{/match}}

    <div class="gh-page-content">
        {{content}}
    </div>
</article>
{{/post}}
