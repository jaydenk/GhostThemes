{{!< default}}

{{#post}}
<article class="gh-photo" data-post-id="{{id}}">
    {{#if feature_image}}
    <figure class="gh-photo-main">
        <img
            srcset="{{img_url feature_image size="m"}} 800w,
                    {{img_url feature_image size="l"}} 1600w,
                    {{img_url feature_image size="xl"}} 2400w"
            sizes="100vw"
            src="{{img_url feature_image size="xl"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        >
    </figure>
    {{/if}}

    <div class="gh-photo-details">
        {{#if title}}
        <h1 class="gh-photo-title">{{title}}</h1>
        {{/if}}

        {{#if custom_excerpt}}
        <div class="gh-photo-meta">
            <span class="gh-photo-location">
                {{> "icons/location"}} {{custom_excerpt}}
            </span>
        </div>
        {{/if}}

        {{#if content}}
        <div class="gh-photo-description">
            {{content}}
        </div>
        {{/if}}
    </div>

    <nav class="gh-photo-nav">
        {{#prev_post}}
        <a class="gh-photo-nav-prev" href="{{url}}">
            {{> "icons/arrow-left"}} Previous
        </a>
        {{/prev_post}}

        <a class="gh-photo-nav-back" href="{{@site.url}}">
            {{> "icons/arrow-left"}} Back
        </a>

        {{#next_post}}
        <a class="gh-photo-nav-next" href="{{url}}">
            Next {{> "icons/arrow-right"}}
        </a>
        {{/next_post}}
    </nav>
</article>
{{/post}}
