<article class="gallery-item"
    data-image="{{img_url feature_image size="xl"}}"
    data-date="{{date format="MMMM D, YYYY"}}"
    data-location="{{custom_excerpt}}"
    data-title="{{title}}"
    data-url="{{url}}"
    data-id="{{id}}">

    {{#if feature_image}}
    <a href="{{url}}" class="gallery-item-link" data-gallery-open>
        <img class="gallery-item-image"
            srcset="{{img_url feature_image size="s"}} 400w,
                    {{img_url feature_image size="m"}} 800w"
            sizes="(max-width: 600px) 50vw, (max-width: 1000px) 33vw, 25vw"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        >
        <div class="gallery-item-overlay">
            <time class="gallery-item-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMM D, YYYY"}}
            </time>
        </div>
    </a>
    {{/if}}
</article>
